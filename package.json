{
  "name": "playwright-with-typescript",
  "version": "1.0.0",
  "description": "A Playwright project using TypeScript for end-to-end testing.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "pretest": "rm -rf reports && mkdir -p reports",
    "test:cucumber": "cucumber-js --require-module ts-node/register --require steps/**/*.ts features/**/*.feature --format json:reports/cucumber-report.json",
    "posttest": "node report.js",
    "testAll": "npm run pretest && npm run test:cucumber || true && npm run posttest",
    "testTags": "cucumber-js --require-module ts-node/register --require steps/**/*.ts features/**/*.feature --tags @flight --format json:reports/cucumber-report.json",
    "testB": "npm run pretest && npm run testTags || true && npm run posttest",
    "testTagsParallel": "cucumber-js --parallel 3 --require-module ts-node/register --require steps/**/*.ts features/**/*.feature --tags @flight --format json:reports/cucumber-report.json",
    "testC": "npm run pretest && npm run testTagsParallel || true && npm run posttest",
    "test:run": "MAX_RETRIES=1 ts-node scripts/runner.ts",
    "test:rerun": "MAX_RETRIES=2 ts-node scripts/rerun.ts",
    "testApi": "TAGS=\"@api\" npm run test:run",
    "testRunSequential": "TAGS=\"@flight\" npm run test:run",
    "testRunParallel": "TAGS=\"@example\" PARALLEL=3 UI_MODE=N npm run test:run"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@playwright/test": "^1.52.0",
    "@types/chai": "^5.2.2",
    "@types/date-fns": "^2.6.3",
    "@types/node": "^14.0.0",
    "chai": "^4.3.0",
    "cucumber-html-reporter": "^7.2.0",
    "playwright": "^1.52.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "date-fns": "^4.1.0"
  }
}